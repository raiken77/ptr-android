<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>
  
  
  <style name="BlackTextMediumStyle" parent="@style/TextAppearance.AppCompat.Medium">
    <item name="android:fontFamily">@font/roboto_medium</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="BlackTextLightStyle" parent="@style/TextAppearance.AppCompat.Medium">
    <item name="android:fontFamily">@font/roboto_light</item>
    <item name="android:textColor">@android:color/black</item>
  </style>


  <style name="RedTextMediumStyle" parent="@style/TextAppearance.AppCompat.Medium">
    <item name="android:fontFamily">@font/roboto_medium</item>
    <item name="android:textColor">@color/colorPrimary</item>
  </style>

  <style name="RedTextLightStyle" parent="@style/TextAppearance.AppCompat.Medium">
    <item name="android:fontFamily">@font/roboto_light</item>
    <item name="android:textColor">@color/colorPrimary</item>
  </style>

</resources>
