<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="Theme.Navigation" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="Theme.Navigation.Launch">
    <item name="android:windowBackground">@drawable/launch_screen</item>
  </style>


  <style name="ToolBarWithNavigationBack">
    <item name="navigationIcon">@drawable/abc_ic_ab_back_material</item>
  </style>

  <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
  <style name="CollapsingTextAppearance.Inverse" >
    <item name="android:textSize">30sp</item>
  </style>
  
  <style name="BlackTextMediumStyle" parent="@style/TextAppearance.AppCompat.Medium">
    <item name="android:fontFamily">@font/roboto_medium</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="BlackTextLightStyle" parent="@style/TextAppearance.AppCompat.Medium">
    <item name="android:fontFamily">@font/roboto_light</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="BlackTextRegularStyle" parent="@style/TextAppearance.AppCompat.Medium">
    <item name="android:fontFamily">@font/roboto_regular</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="RedTextMediumStyle" parent="@style/TextAppearance.AppCompat.Medium">
    <item name="android:fontFamily">@font/roboto_medium</item>
    <item name="android:textColor">@color/app_red</item>
  </style>

  <style name="RedTextLightStyle" parent="@style/TextAppearance.AppCompat.Medium">
    <item name="android:fontFamily">@font/roboto_light</item>
    <item name="android:textColor">@color/app_red</item>
  </style>

  <style name="RedTextRegularStyle" parent="@style/TextAppearance.AppCompat.Medium">
    <item name="android:fontFamily">@font/roboto_regular</item>
    <item name="android:textColor">@color/app_red</item>
  </style>


  <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:windowActionBarOverlay">true</item>
    <!-- Support library compatibility -->
    <item name="windowActionBarOverlay">true</item>
  </style>

</resources>
